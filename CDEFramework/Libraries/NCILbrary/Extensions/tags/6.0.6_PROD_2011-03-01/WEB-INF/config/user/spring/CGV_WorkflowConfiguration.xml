						</entry>
						<entry key="Review (P)">
							<list>
								<value>Resubmit for Review</value>
							</list>
						</entry>					
					</map>
				</entry>
				<entry key="Review (P)">
					<map>
						<entry key="Draft">
							<list>
								<value>noApproval</value>
							</list>
						</entry>					
						<entry key="Public">
							<list>
								<value>Reapprove</value>
							</list>
						</entry>
						<entry key="Editing">
							<list>
								<value>noApproval</value>
							</list>
						</entry>
					</map>
				</entry>
				<entry key="Private Archive">
